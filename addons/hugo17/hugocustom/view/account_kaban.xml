<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_journal_dashboard_inherit_online_sync" model="ir.ui.view">
            <field name="name">account.journal.dashboard.inherit.ndt</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view"/>
            <field name="arch" type="xml">

               
                <xpath expr="//div[@id='dashboard_bank_cash_right']/div[1]" position="before">
                     <div class="row">
                        <div id="dashboard_bank_cash_balance" class="col overflow-hidden text-start">
                            <span>Balance</span>
                        </div>
                        <div class="col-auto text-end">
                            <span class="o_kanban_monetary"><t t-out="dashboard.account_balance_ndt"/></span>
                        </div>
                    </div>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
